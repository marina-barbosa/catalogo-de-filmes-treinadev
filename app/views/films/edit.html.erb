

<%= form_with model: @film do |f| %>
    <%= f.label 'Nome:' %>
    <%= f.text_field :title %>

    <%= f.label 'Ano de lançamento:' %>
    <%= f.text_field :year %>

    <%= f.label 'Sinopse:' %>
    <%= f.text_field :synopsis %>

    <%= f.label 'País de Origem:' %>
    <%= f.text_field :country %>

    <%= f.label 'Duração:' %>
    <%= f.number_field :duration %>

    <%= f.label 'Gênero:' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>

    <%= f.label 'Diretor:' %>
    <%= f.collection_select :filmmaker_id, Filmmaker.all, :id, :name %>

    <%= f.label 'Url do Poster:' %>
    <%= f.text_field :poster %>

    <%= f.submit 'Salvar'%>
<% end %>